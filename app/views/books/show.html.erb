<div class='container mt-3'>
  <div class='row'>
    <div class='col-md-3'>
      <%= render 'users/sidebar', user: @user, book: @new_book %>
    </div>

    <div class='col-md-8 offset-md-1'>
      <h2>Book detail</h2>
      <table class='table'>
        <tr>
          <td><%= image_tag @user.get_profile_image(100,100) %><br><%= link_to @user.name, user_path(@user.id) %></td>
          <td><%= @book.title %></td>
          <td><%= @book.body %></td>
          <% if @user==current_user %>
            <td><%= link_to 'Edit', edit_book_path(@book.id) %></td>
            <td><%= link_to 'Destroy', book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>